<Window x:Class="CursoWPF01.Bind"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CursoWPF01"
        mc:Ignorable="d"
        Title="Bind" Height="219.854" Width="427.651" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button x:Name="btnBind" Content="{Binding Text, ElementName=txbTexto}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="405" Margin="10,11,0,0" Height="82">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFF3F1F1" Offset="0.007"/>
                    <GradientStop Color="#FFBBB5B5" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <TextBox x:Name="txbTexto" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="405" Margin="10,98,0,0" TextChanged="TxbTexto_TextChanged"/>
        <Label Content="Digite no TextBox Para ver o Bind de propriedades" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="85,153,60,0"/>

    </Grid>
</Window>
